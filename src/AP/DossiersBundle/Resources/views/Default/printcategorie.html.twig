




<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">


    <title> ventes par categorie </title>
    <style>
        .column-title{
            margin:0;
        }
        table.jambo_table {
            border: 1px solid rgba(221, 221, 221, 0.78);
            margin-top: 10px;
        }
        th {
            background-color: rgba(52, 73, 94, 0.94);
            color: #ECF0F1;
            padding: 8px;
            line-height: 1.42857143;
        }



        td{
            padding: 8px;
            line-height: 1.42857143;
            vertical-align: top;
            border: 1px solid #ddd;
        }

    </style>






</head>

<body >


<h3><img src="./images/posnic.png" style="width:90px;display: inline-block;float:left;margin-right: 40px;" ></h3>


<h3 style="color:black;text-align:left;font-size: 16px;">  ventes  par cat√©gorie   du <span style="color:#41AF4B;" id="yes">{{ from }}</span> au  <span style="color:#41AF4B" id="day">{{ to }}</span></h3>

<br>

                                <div class="table-responsive mt8" style="margin-left: 35px;position: relative;">


                                    {% for categorie in cat %}

                                  <div style="background-color: #eae9e9;padding:5px 10px;margin:30px 0px 0px;width: 85%">  <h4 style="line-height:0;margin:0px;"> {{ categorie.nom }} </h4></div>
                                        <table class="table table-striped jambo_table " style="width: 90%" >
                                            <thead>
                                            <tr>
                                                <th  style="width:65%;">article </th>

                                                <th>qte </th>
                                                <th>prix unit </th>
                                                <th>prix vte tot </th>


                                            </tr>
                                            </thead>

                                            <tbody >

                                            {% set toto = 0 %}
                                        {% for det in produit %}


                                            {% if det.categorie == categorie.nom %}








                                                            <tr class="even pointer">

                                                                <td  style="width:65%;">{{ det.produit }}</td>

                                                                <td>{{ det.quantite }}</td>
                                                                <td>{{ det.prix|number_format('0', '.', ' ') }}</td>
                                                                <td> {% set tot = det.quantite * det.prix %} {{ tot|number_format('0', '.', ' ') }}</td>


{% set toto = toto + tot %}

                                                            </tr>



                                            {% endif %}






                                        {% endfor %}
                                        <tr >
                                            <th  colspan="3">TOTAL VENTE {{ categorie.nom }}  </th>

                                            <th >{{ toto|number_format('0', '.', ' ') }} FCFA </th>


                                        </tr>

                                        </tbody>
                                        </table>









                                    {% endfor %}

                                    <div  style="background-color:#eee;padding: 15px;margin:10px 10px;width:85%;">
                                        <strong style="margin-right: 300px;"> GRAND TOTAL </strong>
                                        <span style="margin-left: 300px;font-size: 16px "> {{ total|number_format('0', '.', ' ') }} Fcfa</span>

                                    </div>

                                </div>






</body>
</html>





